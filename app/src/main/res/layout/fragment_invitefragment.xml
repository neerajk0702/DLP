<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimValue_3"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:padding="@dimen/dimValue_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mobileNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9876567898"
            android:padding="@dimen/dimValue_5"
            android:textSize="@dimen/dimTextSize_22"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimValue_5"
            android:textSize="@dimen/dimTextSize_18"
            android:text="15 May 2020"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inviteView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/gray_bg"
        android:layout_margin="@dimen/dimValue_5"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/invitetext"
            android:layout_width="@dimen/size_110px"
            android:layout_height="@dimen/size_35px"
            android:gravity="center"
            android:text="@string/Invite"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimTextSize_18" />
    </LinearLayout>



</LinearLayout>
