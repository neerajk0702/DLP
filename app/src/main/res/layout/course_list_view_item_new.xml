<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimValue_5"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_orange_bg"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimValue_16"
            android:paddingRight="@dimen/dimValue_16"
            android:paddingBottom="@dimen/dimValue_16">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dimValue_5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_60px"
                    android:layout_height="@dimen/size_60px"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dimValue_5"
                    android:src="@drawable/ic_media_play" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/courseTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimValue_10"
                        android:paddingTop="@dimen/dimValue_10"
                        android:text="Jaddu Gini Ka"
                        android:textColor="#fff"
                        android:textSize="@dimen/dimTextSize_20" />

                    <TextView
                        android:id="@+id/courseDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimValue_5"
                        android:text="Jaddu Gini Ka"
                        android:textColor="#fff"
                        android:textSize="@dimen/dimTextSize_16" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dimValue_10">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_90px"
                android:background="@drawable/otp_edittext_round"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="@dimen/dimValue_10">

                <TextView
                    android:id="@+id/countchapter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/dimTextSize_24" />

                <TextView
                    android:id="@+id/learnLable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Chapters"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/dimTextSize_18" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
