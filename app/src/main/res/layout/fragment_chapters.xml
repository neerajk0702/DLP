<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="dlp.bluelupin.dlp.Fragments.ChaptersFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_orange_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimValue_120"
            android:layout_alignParentBottom="true"
            android:gravity="left"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/imageContainer"
                android:layout_width="@dimen/size_120px"
                android:layout_height="@dimen/dimValue_112"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/dimValue_6">

                <ImageView
                    android:id="@+id/profileImg"
                    android:layout_width="@dimen/dimValue_110"
                    android:layout_height="@dimen/dimValue_110"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/maincurs" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/userDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimValue_1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/loginUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:textStyle="italic" />
            </LinearLayout>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/emailviewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/emailview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.35"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/userMailAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.65"
                        android:maxLines="1" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phoneview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.35"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/contactNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.65"
                        android:ems="10" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/privecyContainerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailviewLayout"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/privecyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/myprivace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:textStyle="bold" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimValue_10"
        android:layout_marginTop="@dimen/dimValue_5"
        android:layout_marginRight="@dimen/dimValue_10"
        android:layout_marginBottom="@dimen/dimValue_10"
        android:orientation="vertical">


        <!-- <TextView
             android:id="@+id/chapterTitle"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="#4a4d4e"
             android:textSize="@dimen/dimTextSize_22" />-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chaptersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:scrollbars="none" />

        <LinearLayout
            android:id="@+id/quizStartLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@color/colorRad"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/quiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Start Quiz"
                android:textColor="#fff"
                android:textSize="@dimen/dimTextSize_22" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
