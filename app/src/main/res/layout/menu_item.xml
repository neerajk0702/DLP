<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/menuIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:padding="@dimen/dimValue_10"
        android:text="dsb"
        android:textColor="#e60000"
        android:textSize="@dimen/dimTextSize_23" />

    <TextView
        android:id="@+id/menuTitel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimValue_10"
        android:layout_weight="0.7"
        android:gravity="center|left"
        android:text="hello"
        android:textColor="#4a4d4e"
        android:textSize="@dimen/dimTextSize_18" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/menuSelectDot"
            android:layout_width="@dimen/dimValue_5"
            android:layout_height="@dimen/dimValue_5"
            android:background="@drawable/dot_circle"
            android:gravity="center"
            android:orientation="horizontal" />
    </LinearLayout>
</LinearLayout>
