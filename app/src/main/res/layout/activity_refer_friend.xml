<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_refer_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="dlp.bluelupin.dlp.MainActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#e60000"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/logoLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimValue_5"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/leftArrow"
                        android:layout_width="@dimen/dimValue_40"
                        android:layout_height="@dimen/dimValue_40"
                        android:src="@drawable/ic_back_arrow" />
                </LinearLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="@string/referfriend"
                    android:textColor="#fff"
                    android:textSize="@dimen/dimTextSize_22" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dimValue_16"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/size_250px"
            android:layout_height="@dimen/size_250px"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimValue_5"
            android:src="@drawable/ic_refer_friend" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sharejoy"
            android:textColor="#4a4d4e"
            android:layout_margin="@dimen/dimValue_5"
            android:padding="@dimen/dimValue_5"
            android:textSize="@dimen/dimTextSize_20"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dimValue_5"
            android:layout_marginLeft="@dimen/dimValue_5"
            android:padding="@dimen/dimValue_5"
            android:visibility="visible">

            <EditText
                android:id="@+id/mobileNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimValue_60"
                android:layout_marginTop="@dimen/dimValue_10"
                android:background="@drawable/otp_edittext_round"
                android:hint="@string/enter_phone_no"
                android:maxLength="40"
                android:paddingLeft="@dimen/dimValue_5"
                android:singleLine="true"
                android:textColor="#4a4d4e"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="@dimen/dimTextSize_18" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_20"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/invite"
                android:layout_width="@dimen/size_350px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimValue_10"
                android:layout_marginRight="@dimen/dimValue_10"
                android:background="@drawable/done_corner_round"
                android:gravity="center"
                android:padding="@dimen/dimValue_13"
                android:text="@string/Invite"
                android:textColor="#fff"
                android:textSize="@dimen/dimTextSize_20" />
        </LinearLayout>


        <TextView
            android:id="@+id/viewpastInvite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimTextSize_10"
            android:padding="@dimen/dimValue_5"
            android:text="@string/viewpastinvitestr"
            android:textAlignment="center"
            android:textColor="@color/colorDrakRed"
            android:textSize="@dimen/dimTextSize_18"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>
