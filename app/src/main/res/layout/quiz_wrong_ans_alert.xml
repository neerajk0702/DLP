<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_layout_titleBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimValue_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimValue_10"
                android:layout_weight="0.5"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/listenLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimValue_10"
                    android:paddingTop="@dimen/dimValue_10">

                    <TextView
                        android:id="@+id/listen_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right|center"
                        android:text="@string/Listen"
                        android:textColor="@color/colorRad"
                        android:textSize="@dimen/dimTextSize_16" />

                    <TextView
                        android:id="@+id/listen_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimValue_10"
                        android:layout_marginTop="@dimen/dimValue_3"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/colorRad"
                        android:textSize="@dimen/dimTextSize_16" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/correctIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="#32CD32"
                android:textSize="@dimen/dimTextSize_16" />

            <TextView
                android:id="@+id/correctAns"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimValue_10"
                android:gravity="left|center"
                android:text="@string/Correct_Answer"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimTextSize_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/option"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimTextSize_16" />

            <TextView
                android:id="@+id/optionDetails"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimValue_10"
                android:gravity="left|center"
                android:text="@string/This_is_correct"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimTextSize_16" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/desIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:text=""
                android:textColor="#32CD32"
                android:textSize="@dimen/dimTextSize_16" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimValue_10"
                android:gravity="right|center"
                android:text="@string/Description"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimTextSize_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/descriptionDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimTextSize_16" />
        <View
            android:id="@+id/divView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/dimValue_16"
            android:layout_marginTop="@dimen/dimValue_16"
            android:background="#929495" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_20"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/quit_layout"
                android:layout_width="@dimen/size_120px"
                android:layout_height="@dimen/size_35px"
                android:layout_marginLeft="@dimen/dimValue_10"
                android:background="@color/colorRad"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/close_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@color/colorRad"
                    android:gravity="center"
                    android:padding="@dimen/dimValue_6"
                    android:text="@string/Close"
                    android:textColor="#fff"
                    android:textSize="@dimen/dimTextSize_18" />

                <TextView
                    android:id="@+id/quit_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@color/colorDrakRed"
                    android:gravity="center"
                    android:padding="@dimen/dimValue_6"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="@dimen/dimTextSize_18" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>