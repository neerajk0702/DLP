<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimValue_5"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_150px"
                android:orientation="vertical">

                <dlp.bluelupin.dlp.Utilities.ScaleImageView
                    android:id="@+id/certificateimg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/imageplaceholder" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/imageprogress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
               />
        </FrameLayout>


        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimValue_10"
            android:layout_marginTop="@dimen/dimValue_16"
            android:layout_marginRight="@dimen/dimValue_5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="@dimen/dimTextSize_22" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimValue_5"
                    android:layout_marginRight="@dimen/dimValue_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="@dimen/size_20px"
                        android:layout_height="@dimen/size_20px"
                        android:layout_marginTop="@dimen/dimValue_5"
                        android:layout_marginRight="@dimen/dimValue_16"
                        android:background="@drawable/ic_share_green" />

                    <ImageView
                        android:id="@+id/download"
                        android:layout_width="@dimen/size_30px"
                        android:layout_height="@dimen/size_30px"
                        android:background="@drawable/ic_downloadnew" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/datetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_8"
                android:text=""
                android:textColor="#000"
                android:textSize="@dimen/dimTextSize_20" />

            <TextView
                android:id="@+id/certificateno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_10"
                android:layout_marginBottom="@dimen/dimValue_8"
                android:text=""
                android:textColor="@color/daidalos_gray"
                android:textSize="@dimen/dimTextSize_18" />

        </LinearLayout>


        <View
            android:id="@+id/divView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimValue_10"
            android:background="#929495" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
