<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_140px"
    android:layout_marginTop="@dimen/dimValue_5"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardCornerRadius="@dimen/dimValue_5"
    card_view:cardElevation="@dimen/dimValue_3"
    card_view:cardUseCompatPadding="true">



    <LinearLayout
        android:id="@+id/topicView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="horizontal">

            <dlp.bluelupin.dlp.Utilities.ScaleImageView
                android:id="@+id/chapterImage"
                android:layout_width="@dimen/size_250px"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/maincurs" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/dimValue_5">

                    <TextView
                        android:id="@+id/chapterTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="3"
                        android:padding="@dimen/dimValue_5"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimTextSize_16"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/topicStatus"
                    android:layout_width="@dimen/size_120px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_12"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/dimValue_5"
                    android:background="@drawable/green_bg"
                    android:layout_gravity="left">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/dimValue_5"
                        android:padding="@dimen/dimValue_5"
                        android:text="@string/InProgress"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/dimTextSize_16" />


                </LinearLayout>
            </LinearLayout>





        </LinearLayout>







    </LinearLayout>

</androidx.cardview.widget.CardView>
